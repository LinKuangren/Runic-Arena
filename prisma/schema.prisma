// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Card {
  id                   Int                          @id @default(autoincrement())
  name                 String
  illustration         String
  type                 Type?                        @relation(fields: [typeId], references: [id])
  typeId               Int?
  class                Class?                       @relation(fields: [classId], references: [id])
  classId              Int?
  power                Int
  Ability              Ability[]
  competenceId         Int
  competence_passive   Competence?                   @relation(fields: [competenceId], references: [id])
  competences_active   CartesCapacictesActive[]
  cost                 String
  color                String
  description          String
}

model Type {
  id   Int    @id @default(autoincrement())
  name String
  Card Card[]
}

model Class {
  id   Int    @id @default(autoincrement())
  name String
  Card Card[]
}

model Ability {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  card        Card?  @relation(fields: [cardId], references: [id])
  cardId      Int?
}

model Competence {
  id            Int     @id @default(autoincrement())
  name          String
  description   String
  card_passvie  Card[]
  card_active   CartesCapacictesActive[]
}

model CartesCapacictesActive {
  competenceId  Int
  competence    Competence @relation(fields: [competenceId], references: [id])
  cardId        Int
  card          Card     @relation(fields: [cardId], references: [id])

  @@id([competenceId, cardId])
}
