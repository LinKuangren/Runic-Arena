// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Carte {
  id                   Int                          @id @default(autoincrement())
  name                 String
  illustration         String
  type                 Type?                        @relation(fields: [typeId], references: [id])
  typeId               Int?
  classe               Classe?                       @relation(fields: [classeId], references: [id])
  classeId             Int?
  power                Int
  Capacite             Capacite[]
  competenceId         Int
  competence_passive   Competence?                   @relation(fields: [competenceId], references: [id])
  competences_active   CartesCapacictesActive[]
  cost                 String
  color                String
  description          String
}

model Type {
  id   Int    @id @default(autoincrement())
  name String
  Carte Carte[]
}

model Classe {
  id   Int    @id @default(autoincrement())
  name String
  Carte Carte[]
}

model Capacite {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  Carte        Carte?  @relation(fields: [carteId], references: [id])
  carteId      Int?
}

model Competence {
  id            Int     @id @default(autoincrement())
  name          String
  type          String
  description   String
  carte_passvie  Carte[]
  carte_active   CartesCapacictesActive[]
}

model CartesCapacictesActive {
  competenceId  Int
  competence    Competence @relation(fields: [competenceId], references: [id])
  carteId        Int
  carte          Carte     @relation(fields: [carteId], references: [id])

  @@id([competenceId, carteId])
}
